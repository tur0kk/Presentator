header.jadediv.navbar.navbar-inverse.navbar-fixed-top(role='navigation')
    // define link variables
    -var menu = { 'Home': '/', 'My Presentations':'/mypresentations', 'About': '/about'}; // define menu links
    block link
        -var selected = 'Home'; //default, overwritten by specific view

    div.navbar-header
        button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
            span.icon-bar
            span.icon-bar
            span.icon-bar
        a.navbar-brand(href="/")
            | #{title}
    div.collapse.navbar-collapse.navbar-left
        ul.nav.navbar-nav
            each val, key in menu
                li(class=selected==key?'active':'')
                    a(href=val, title=key)=key
    div.collapse.navbar-collapse.navbar-right
        ul.nav.navbar-nav
            if(user)
                li
                    a(href="/mypresentations/logout") Logout

