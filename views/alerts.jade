   .row
      .col-md-8.col-md-offset-2
         .alert.alert-success(role="alert") #{success}
if(error)
   .row
      .col-md-8.col-md-offset-2
         .alert.alert-danger(role="alert") #{error}
if(notice)
   .row
      .col-md-8.col-md-offset-2
         .alert.alert-info(role="alert") #{notice}