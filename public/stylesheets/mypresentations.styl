#sidebar-container
  margin-top 15px

#sidebar a:focus
  outline 0px !important
  -webkit-appearance none;
  background-color rgba(0, 0, 0, 0);
  color rgb(66, 139, 202)

.presentations-list
  list-style-type none
  margin-left 20px

.presentations-list .active a, .presentations-list .active a:hover
  background-color: #51b1ff !important;

.btn-file
  position relative
  overflow hidden

.btn-file input[type=file]
  position absolute
  top 0
  right 0
  min-width 100%
  min-height 100%
  font-size 100px
  text-align right
  //filter alpha(opacity=0)
  opacity 0
  background red
  cursor inherit
  display block

input[readonly]
  background-color white !important
  cursor text !important

// angular file upload
.my-drop-zone
  border dotted 3px lightgray
  text-align center
.nv-file-over
  border dotted 3px green
.my-drop-zone-error
  border dotted 3px red
#presentationDropZone
  //width 50%
.replace-drop-zone
  height: 70%
  width: 200px

.place-middle
  margin-top 50px

.offset-bot
  margin-bottom 1em

.btn-login
  background-color: #59B2E0;
  outline: none;
  color: #fff;
  font-size: 14px;
  height: auto;
  font-weight: normal;
  padding: 14px 0;
  text-transform: uppercase;
  border-color: #59B2E6;

.btn-login:hover,
.btn-login:focus
  color: #fff;
  background-color: #53A3CD;
  border-color: #53A3CD;
.panel-heading
  cursor grab
  cursor -webkit-grab
  cursor -moz-grab
.pointer
  cursor pointer

.placeholder
  width 810px
  height 100px
  border 5px dashed #d9edf7
  border-radius 10px

